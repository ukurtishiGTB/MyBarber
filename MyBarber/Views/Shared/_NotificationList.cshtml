@using Microsoft.EntityFrameworkCore
@inject MyBarber.Data.ApplicationDbContext DbContext
@inject IHttpContextAccessor HttpContextAccessor

@{
    var barberId = HttpContextAccessor.HttpContext.Session.GetInt32("BarberId");
    var notifications = new List<MyBarber.Models.Notification>();

    if (barberId != null)
    {
        notifications = DbContext.Notifications
            .Where(n => n.BarberId == barberId)
            .Include(n => n.Appointment)
            .ThenInclude(a => a.User)
            .OrderByDescending(n => n.CreatedAt)
            .ToList();
    }
}

<div class="notifications-wrapper">
    @if (notifications.Any())
    {
        <div class="notifications-list">
            @foreach (var notification in notifications)
            {
                <div class="notification-card">
                    <a href="@Url.Action("ManageAppointments", "Appointment")" class="notification-link">
                        <div class="notification-icon">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <div class="notification-content">
                            <div class="notification-text">
                                @if (notification.Appointment?.User != null)
                                {
                                    <span class="user-name">@notification.Appointment.User.Name</span>
                                    <span>made a booking</span>
                                }
                                else
                                {
                                    <span class="user-name">Unknown User</span>
                                    <span>made a booking</span>
                                }
                            </div>
                            <div class="notification-time">
                                <i class="far fa-clock"></i>
                                <span>@notification.CreatedAt.ToString("MMM dd, HH:mm")</span>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-bell-slash"></i>
            <p>No new notifications</p>
        </div>
    }
</div>

<style>
.notifications-wrapper {
    max-height: 400px;
    overflow-y: auto;
    background: white;
    border-radius: 15px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1rem;
}

.notifications-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.notification-card {
    background: linear-gradient(135deg, #f8f9fa, #ffffff);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    border: 1px solid #eee;
}

.notification-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(33, 147, 176, 0.1);
    border-color: #2193b0;
}

.notification-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    text-decoration: none;
    color: #333;
}

.notification-icon {
    width: 45px;
    height: 45px;
    background: linear-gradient(135deg, #2193b0, #6dd5ed);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.notification-icon i {
    color: white;
    font-size: 1.2rem;
}

.notification-content {
    flex: 1;
}

.notification-text {
    margin-bottom: 0.25rem;
    font-size: 0.95rem;
}

.user-name {
    color: #2193b0;
    font-weight: 600;
}

.notification-time {
    font-size: 0.8rem;
    color: #666;
    display: flex;
    align-items: center;
    gap: 0.25rem;
}

.empty-state {
    text-align: center;
    padding: 2rem;
    color: #666;
}

.empty-state i {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    color: #2193b0;
}

/* Scrollbar Styling */
.notifications-wrapper::-webkit-scrollbar {
    width: 6px;
}

.notifications-wrapper::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 3px;
}

.notifications-wrapper::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, #2193b0, #6dd5ed);
    border-radius: 3px;
}

@@media (max-width: 768px) {
    .notification-text {
        font-size: 0.9rem;
    }
    
    .notification-icon {
        width: 40px;
        height: 40px;
    }
}
</style>