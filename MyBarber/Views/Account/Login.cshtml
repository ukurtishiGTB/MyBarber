@model MyBarber.ViewModels.LoginViewModel

<form asp-action="Login" method="post" class="login-form">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="Email" required />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="Password" required />
    </div>
    <div class="form-group">
        <label for="rememberMe">Remember Me</label>
        <input type="checkbox" id="rememberMe" name="RememberMe" />
    </div>
    <button type="submit" class="submit-btn">Login</button>
</form>

<!-- CSS -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        padding: 0;
    }

    .login-form {
        width: 100%;
        max-width: 400px;
        margin: 50px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input[type="email"], input[type="password"], input[type="checkbox"] {
        width: 100%;
        padding: 8px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input:focus {
        border-color: #4e89ae;
        outline: none;
    }

    input[type="checkbox"] {
        width: auto;
        margin-right: 10px;
    }

    button.submit-btn {
        width: 100%;
        padding: 10px;
        background-color: #000; /* Ngjyra e zezë */
        color: white;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    button.submit-btn:hover {
        background-color: #333; /* Ngjyra më e errët për hover */
    }
</style>
