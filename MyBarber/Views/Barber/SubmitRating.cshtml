@using MyBarber.ViewModels
@model RatingViewModel

<h2>Leave a Review</h2>

<form asp-action="SubmitRating" method="post">
    <input type="hidden" name="BarberId" value="@Model.BarberId" />

    <div class="form-group">
        <label for="Stars">Rating (1-5):</label>
        <select id="Stars" name="Stars" class="form-control" required>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Comment">Comment:</label>
        <textarea id="Comment" name="Comment" class="form-control" rows="3" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
