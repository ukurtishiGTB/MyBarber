@using MyBarber.ViewModels
@model RatingViewModel

<div class="rating-container">
    <h2 class="rating-title">Share Your Experience</h2>
    <p class="rating-subtitle">Your feedback helps others make better choices</p>

    <form asp-action="SubmitRating" method="post" class="rating-form">
        <input type="hidden" name="BarberId" value="@Model.BarberId" />

        <div class="star-rating">
            <label class="rating-label">How was your experience?</label>
            <div class="stars">
                @for (int i = 5; i >= 1; i--)
                {
                    <input type="radio" id="star@(i)" name="Stars" value="@i" required />
                    <label for="star@(i)" class="star-label">
                        <i class="fas fa-star"></i>
                    </label>
                }
            </div>
        </div>

        <div class="comment-group">
            <label for="Comment" class="comment-label">Share your thoughts</label>
            <textarea id="Comment" name="Comment" rows="4" required
                      placeholder="Tell us about your experience..."></textarea>
        </div>

        <button type="submit" class="submit-btn">
            <i class="fas fa-paper-plane"></i> Submit Review
        </button>
    </form>
</div>

<style>
    .rating-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .rating-title {
        color: #2193b0;
        font-size: 2rem;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .rating-subtitle {
        color: #666;
        text-align: center;
        margin-bottom: 2rem;
    }

    .rating-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .star-rating {
        text-align: center;
    }

    .rating-label {
        display: block;
        color: #444;
        margin-bottom: 1rem;
        font-size: 1.1rem;
    }

    .stars {
        display: flex;
        flex-direction: row-reverse;
        justify-content: center;
        gap: 0.5rem;
    }

    .stars input[type="radio"] {
        display: none;
    }

    .star-label {
        font-size: 2rem;
        color: #ddd;
        cursor: pointer;
        transition: color 0.2s ease;
    }

    .star-label:hover,
    .star-label:hover ~ .star-label,
    .stars input[type="radio"]:checked ~ .star-label {
        color: #ffd700;
    }

    .comment-group {
        margin-top: 1rem;
    }

    .comment-label {
        display: block;
        color: #444;
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    textarea {
        width: 100%;
        padding: 1rem;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        resize: vertical;
        font-family: inherit;
        transition: border-color 0.3s ease;
    }

    textarea:focus {
        outline: none;
        border-color: #2193b0;
    }

    .submit-btn {
        background: linear-gradient(135deg, #2193b0, #6dd5ed);
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 30px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    @@media (max-width: 768px) {
        .rating-container {
            margin: 1rem;
            padding: 1.5rem;
        }

        .star-label {
            font-size: 1.75rem;
        }
    }
</style>
}
